<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><b>Salary Conversion</b></h4>
        </div>
    </div>
</div>

<div id="salary-form" class="form-horizontal">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-flat">
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label" for="pangkalan">Source File:</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" name="sourcefile" id="txtsource" placeholder="Select Source File" type="text" value="http://jsonplaceholder.typicode.com/users" readonly>
                                        <span id="sourcefile_help" class="sourcefile-block">
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>                      
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="panel panel-flat table-responsive">
        <div class="panel-body">
            <table id="dataTable" class="table table-striped table-bordered">
                <thead>
                    <tr style="border: 1px solid #dddddd;">
                        <th width="5%"><b>ID</b></th>
                        <th width="15%"><b>Name</b></th>
                        <th width="20%"><b>User Name</b></th>
                        <th width="15%"><b>Email</b></th>
                        <th width="15%"><b>Address</b></th>
                        <th width="10%"><b>Phone</b></th>
                        <th width="10%"><b>Salary(IDR)</b></th>
                        <th width="10%"><b>Salary(USD)</b></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<script src="~/js/salaryconversion.js"></script>